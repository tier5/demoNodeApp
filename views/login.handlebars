<h2 class="page-header">Account Login</h2>
<form method="post" action="/users/login">
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" name="username" placeholder="Username"/>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password"/>
  </div>
  <button type="submit" class="btn btn-default btn-success">Submit</button>
</form>
<br />
<div class="col-md-12">
  <label>Also sign in with</label><br />
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-google" href="/users/login/googleAuth"><span class="fa fa-google"></span>Google+</a>
  </div>
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-facebook" href="/users/login/facebookAuth"><span class="fa fa-facebook"></span>Facebook</a>
  </div>
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-twitter" href="/users/login/twitterAuth"><span class="fa fa-twitter"></span>Twitter</a>
  </div>
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-instagram" href="/users/login/instagramAuth"><span class="fa fa-instagram"></span>Instagram</a>
  </div>
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-github" href="/users/login/githubAuth"><span class="fa fa-github"></span>Github</a>
  </div>
  <div class="custom-social-login col-md-3">
      <a class="btn btn-block btn-social btn-linkedin" href="/users/login/linkedinAuth"><span class="fa fa-linkedin"></span>Linkedin</a>
  </div>
</div>
